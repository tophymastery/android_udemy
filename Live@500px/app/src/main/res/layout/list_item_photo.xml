<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mock"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvName"
            style="@style/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Name Name Name Name Name Name Name Name Name Name "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tvDescription"
            style="@style/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description description description description description description description description description "
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>